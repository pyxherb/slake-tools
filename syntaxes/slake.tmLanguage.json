{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Slake",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#integers"
		},
		{
			"include": "#decimals"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.slake",
					"match": "\\b(async|await|break|case|catch|continue|default|else|for|if|let|return|static|switch|throw|try|while|yield)\\b"
				},
				{
					"name": "keyword.control.import.slake",
					"match": "\\b(use)\\b"
				},
				{
					"name": "storage.modifier",
					"match": "\\b(const|final|native|override|pub)\\b"
				},
				{
					"name": "constant.language.slake",
					"match": "\\b(base|this)\\b"
				},
				{
					"name": "keyword.control.slake",
					"match": "\\b(delete|new|operator|typeof)\\b"
				},
				{
					"name": "constant.language.boolean.slake",
					"match": "\\b(false|true)\\b"
				},
				{
					"name": "constant.language.null",
					"match": "\\b(null)\\b"
				},
				{
					"name": "storage.type",
					"match": "\\b(class|enum|fn|interface|module|struct|trait|i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|string|bool|auto|void|any)\\b"
				}
			]
		},
		"integers": {
			"patterns": [
				{
					"name": "constant.numeric.integer",
					"match": "\\b0[0-7]+\\b"
				},
				{
					"name": "constant.numeric.integer",
					"match": "\\b[0-9]+\\b"
				},
				{
					"name": "constant.numeric.integer",
					"match": "\\b0[xX][0-9a-fA-F]+\\b"
				},
				{
					"name": "constant.numeric.integer",
					"match": "\\b0[bB][01]+\\b"
				}
			]
		},
		"decimals": {
			"patterns": [
				{
					"name": "constant.numeric.decimal",
					"match": "[0-9]+.[0-9]+[fF]"
				},
				{
					"name": "constant.numeric.decimal",
					"match": "[0-9]+.[0-9]+"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.slake",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.slake",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.slake"
}
